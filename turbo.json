{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "globalEnv": ["CI"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "env": ["REDIS_URL", "REMOTE_CACHE_SERVER_BASE_URL", "SERVER_STARTED", "PORT"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "lint": {},
        "test": {},
        "e2e": {
            "inputs": [".next/**", "!.next/cache/**", "tests/**"],
            "outputs": ["test-results/**", "playwright-report/**"]
        },
        "clean": {
            "cache": false
        },
        "start": {
            "cache": false,
            "persistent": true
        },
        "dev": {
            "cache": false
        }
    }
}
