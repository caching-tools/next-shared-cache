{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node packages",
    "extends": "./base.json",
    "compilerOptions": {
        "allowJs": true,
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "lib": ["esnext"],
        "module": "esnext",
        "emitDeclarationOnly": true,
        "noUncheckedIndexedAccess": true,
        "strict": true,
        "target": "ESNext"
    },
    "include": ["src", "scripts"],
    "exclude": ["node_modules"]
}
